<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnViewMdelDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewMdel"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnViewMdelDemo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewMdel2"
        app:layout_constraintTop_toBottomOf="@+id/btnViewMdelDemo"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnLiveDataDemo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LiveData"
        app:layout_constraintTop_toBottomOf="@+id/btnViewMdelDemo2"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnDataBinding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DataBinding"
        app:layout_constraintTop_toBottomOf="@+id/btnViewMdelDemo2"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnLifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lifecycle"
        app:layout_constraintTop_toBottomOf="@+id/btnDataBinding"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />
    <Button
        android:id="@+id/btnRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        app:layout_constraintTop_toBottomOf="@+id/btnLifecycle"
        tools:layout_editor_absoluteX="1dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>